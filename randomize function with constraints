  int num1;
  rand int num2;
endclass
module test;
  sample sm;
  initial begin
    sm=new();
    repeat(20)
      assert(sm.randomize(num1,num2)with{num1>0;num1<100;})
        $display("num1=%0d and num2=%0d",sm.num1,sm.num2);
  end
endmodule


//randomize single variable

// Code your testbench here
// or browse Examples
class sample;
  rand int num1;
  rand int num2;
  rand int num3;
endclass
module test;
  sample sm;
  initial begin
    sm=new();
    repeat(20)
      assert(sm.randomize(num1)with{num1>0;num1<100;})
        $display("num1=%0d and num2=%0d and num3=%0d",sm.num1,sm.num2,sm.num3);
  end
endmodule

//randomize value of class a with obj creation in class b
class a;
  rand int num;
endclass
class b;
  rand a a1;
  function new;
    a1=new();
  endfunction
endclass 
module tb;
  b b1;
  initial begin
    b1=new();
    repeat(20)
      begin
        assert(b1.randomize())
          $display("value=%0d",b1.a1.num);
      end
  end
    endmodule


//randomize with struct

class sample;
  typedef struct{randc int a;
                 bit[3:0]b;
                }st_t;
  rand st_t st;
endclass
module test;
  sample sm;
  initial begin
    sm=new();
    repeat(20)
      assert(sm.randomize())
        $display("value of a=%0d and vlue of b=%0d",sm.st.a,sm.st.b);
        end
        endmodule


//create a randomized constraint for class a with a range 30-70

// Code your testbench here
// or browse Examples
class abc;
  rand int a;
  randc bit[7:0]b;
  constraint c{a>30;a<70;}
  constraint c1{b inside{[1:7],15,[17:20],30};}
  
endclass
module test;
  abc x1;
  initial begin
    x1=new;
    repeat(10)
      assert(x1.randomize())
        $display("value of a=%0d and value of b=%b",x1.a,x1.b);
  end
endmodule

