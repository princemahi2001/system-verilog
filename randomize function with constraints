// Code your testbench here
// or browse Examples
module tb;
  integer rec[0:9];
  integer i,temp,num,index=0;
  initial begin
    $monitor("num=%0d",num);
    while(index!=10) begin
      temp=$random;
      begin:loop
        for(i=0;i<index;i=i+1)
          if(rec[i]==temp)
            disable loop;
        rec[index]=temp;
        index=index+1;
        num=temp;
        #2; end
    end
  end
endmodule


//for positive odd numbers upto 15

module test;
  integer a;
  initial begin
    repeat(10) begin
      if(randomize(a)with{a>0;a<15;a%2!=0;})
        $display("num1=%0d",a);
        
      #2; end
  end
endmodule

//for positive even numbers 

module test;
  integer a;
  initial begin
    repeat(10) begin
      if(randomize(a)with{a>0;a%2==0;})
        $display("num1=%0d",a);
        
      #2; end
  end
endmodule


