//for display randomize 1,7,10

module test;
  integer a;
  initial begin
    repeat(20) begin
      if(randomize(a)with{a inside{1,7,10};})
        $display("num1=%0d",a);
        
      #2; end
  end
endmodule


//rand function

// Code your testbench here
// or browse Examples
class sample;
  rand int num1;
  int num2;
endclass
module test;
  sample sm;
  initial begin
    sm=new();
    repeat(20)
      assert(sm.randomize())
        $display("num1=%0d and num2=%0d",sm.num1,sm.num2);
  end
endmodule

//randomize between 0 to 100 uisng rand

// Code your testbench here
// or browse Examples
class sample;
  rand int num1;
  int num2;
endclass
module test;
  sample sm;
  initial begin
    sm=new();
    repeat(20)
      assert(sm.randomize(num1)with{num1>0;num1<100;})
        $display("num1=%0d and num2=%0d",sm.num1,sm.num2);
  end
endmodule


